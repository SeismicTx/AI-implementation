params {
    // Local paths
    input_dir = 'data/input'
    output_dir = 'data/output'
    model_dir = 'models'
}

// Configure for local execution
process {
    executor = 'local'
    containerOptions = '--rm'
    cpus = 2
    memory = '4 GB'
}

// Docker configuration
docker {
    enabled = true
    removeTempFiles = true
}